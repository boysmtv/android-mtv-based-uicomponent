<resources>

    <!-- ===================== -->
    <!-- GLOBAL ATTR DEFINITIONS -->
    <!-- ===================== -->

    <attr name="label" format="string" />
    <attr name="placeholder" format="string" />
    <attr name="errorText" format="string" />

    <attr name="isEnabled" format="boolean" />
    <attr name="loading" format="boolean" />

    <attr name="title" format="string" />
    <attr name="message" format="string" />
    <attr name="positiveText" format="string" />
    <attr name="negativeText" format="string" />

    <!-- ===================== -->
    <!-- COMPONENT INPUT -->
    <!-- ===================== -->

    <declare-styleable name="ComponentInput">
        <attr name="label" />
        <attr name="placeholder" />
        <attr name="errorText" />
        <attr name="isEnabled" />
    </declare-styleable>

    <!-- ===================== -->
    <!-- COMPONENT BUTTON -->
    <!-- ===================== -->

    <declare-styleable name="ComponentButton">
        <attr name="text" format="string" />
        <attr name="loading" />
        <attr name="isEnabled" />
    </declare-styleable>

    <!-- ===================== -->
    <!-- COMPONENT DIALOG -->
    <!-- ===================== -->

    <declare-styleable name="ComponentDialog">
        <attr name="title" />
        <attr name="message" />
        <attr name="positiveText" />
        <attr name="negativeText" />
    </declare-styleable>

    <!-- ===================== -->
    <!-- COMPONENT BOTTOM SHEET -->
    <!-- ===================== -->

    <declare-styleable name="ComponentBottomSheet">
        <attr name="title" />
        <attr name="message" />
    </declare-styleable>

</resources>
